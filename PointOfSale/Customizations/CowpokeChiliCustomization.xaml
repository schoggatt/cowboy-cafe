<UserControl x:Class="PointOfSale.Customizations.CowpokeChiliCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Customizations"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <StackPanel>
        <StackPanel>
            <CheckBox IsChecked="{Binding Path=Cheese}" VerticalAlignment="Center">cheese</CheckBox>
            <CheckBox IsChecked="{Binding Path=GreenOnions}">Green Onions</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
