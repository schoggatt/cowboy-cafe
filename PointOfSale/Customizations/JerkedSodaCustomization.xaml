<UserControl x:Class="PointOfSale.Customizations.JerkedSodaCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Customizations"
             xmlns:data="clr-namespace:CowboyCafe.Data;assembly=CowboyCafe.Data"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <CheckBox IsChecked="{Binding Path=Ice}">Ice</CheckBox>
        <TextBlock>Flavors</TextBlock>
        <RadioButton GroupName="Flavor" Name="Sarsparilla">Sarsparilla</RadioButton>
        <RadioButton GroupName="Flavor" Name="RootBeer">Root Beer</RadioButton>
        <RadioButton GroupName="Flavor" Name="OrangeSoda">Orange Soda</RadioButton>
        <RadioButton GroupName="Flavor" Name="BirchBeer">Birch Beer</RadioButton>
        <RadioButton GroupName="Flavor" Name="CreamSoda">Cream Soda</RadioButton>
        <TextBlock>Size</TextBlock>
        <RadioButton GroupName="Size" Name="Small">Small</RadioButton>
        <RadioButton GroupName="Size" Name="Medium">Medium</RadioButton>
        <RadioButton GroupName="Size" Name="Large">Large</RadioButton>
    </StackPanel>
</UserControl>
