<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Name ="ItemSelectionButton" Height="45" Width="125" Grid.Column="0" VerticalAlignment="Top" Margin="10">Item Selection</Button>
            <Button Name ="CancelOrderButton" Height="45" Width="125" Grid.Column="0" VerticalAlignment="Top" Margin="10">Cancel Order</Button>
            <Button Name ="CompleteOrderButton" Height="45" Width="125" Grid.Column="0" VerticalAlignment="Top" Margin="10">Complete Order</Button>
        </StackPanel>
        <Border Name="Container">
            <local:MenuItemSelectionControl Grid.Column="0" VerticalAlignment="Top" Padding="10" Margin="0,50,0,0"/>
        </Border>
        <local:OrderSummaryControl Padding="10" Grid.ColumnSpan="2" Margin="444,0,106,0"/>
    </Grid>
</UserControl>
